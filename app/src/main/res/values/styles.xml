<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="listPreferredItemHeightSmall">45dp</item>
        <item name="android:listDivider">@color/gray_1</item>
        <item name="colorAccent">@color/colorSecondary</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="CustomEditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="singleLine">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MontserratTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/gray_1</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_bold_normal</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="btn_without_images" parent="Widget.AppCompat.Button">
        <item name="android:color">#000000</item>

        <item name="android:colorPressedHighlight">#D3D3D3</item>
        <item name="background">@drawable/btn_without_images_item</item>

    </style>
    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="background">@drawable/roundbutton</item>
        <item name="fontFamily">@font/montserrat_bold_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="clickTheme1" >
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>


</resources>
