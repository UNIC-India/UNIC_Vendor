<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="190dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp">
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/home_page_circle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"></View>

 <ImageView
     android:id="@+id/order_icon"
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:layout_gravity="center_horizontal"
     android:layout_marginTop="30dp"
     android:tint="@color/colorTertiary"
     android:src="@drawable/clipboardlist"
     android:elevation="2dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="Orders Received"
            android:elevation="2dp"
            android:textColor="@color/darkest"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:text="You can see your orders here"
            android:elevation="2dp"
            android:textColor="@color/darkest"></TextView>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="190dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp">
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_page_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"></View>

            <ImageView
                android:id="@+id/qr_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/colorTertiary"
                android:layout_marginTop="43dp"
                android:src="@drawable/qrcode"
                android:elevation="2dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:text="My QR"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Your specialised QR code"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="190dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@id/card_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp">
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_page_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"></View>

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/colorTertiary"
                android:layout_marginTop="35dp"
                android:src="@drawable/settings"
                android:elevation="2dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:text="Settings"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:text="Manage notifications, order limit, etc"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="190dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@id/card_view2"
            app:layout_constraintLeft_toRightOf="@id/card_view3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp">
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_page_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"></View>

            <ImageView
                android:id="@+id/products_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/colorTertiary"
                android:layout_marginTop="40dp"
                android:src="@drawable/shoppingbag"
                android:elevation="2dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:text="My Products"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="85dp"
                android:text="Add, remove and modify your list of products"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view5"
            android:layout_width="190dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@id/card_view3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp">
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_page_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"></View>

            <ImageView
                android:id="@+id/report_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/colorTertiary"
                android:layout_marginTop="40dp"
                android:src="@drawable/analytics"
                android:elevation="2dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:text="My Report"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:text="Detailed analysis of your sales"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view6"
            android:layout_width="190dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@id/card_view4"
            app:layout_constraintLeft_toRightOf="@id/card_view5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp">
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_page_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"></View>

            <ImageView
                android:id="@+id/apps_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/colorTertiary"
                android:layout_marginTop="43dp"
                android:src="@drawable/materialapps"
                android:elevation="2dp"></ImageView>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:text="My Products"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="85dp"
                android:text="Add, remove and modify your list of products"
                android:elevation="2dp"
                android:textColor="@color/darkest"></TextView>

        </androidx.cardview.widget.CardView>






    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>