<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_border">

    <TextView
        android:id="@+id/tv_view_header_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="22sp"
        android:text="Set view header"/>
    <EditText
        android:id="@+id/et_view_header_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_view_header_input"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btn_view_header_confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_view_header_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:text="Confirm"/>
    <Button
        android:id="@+id/btn_view_header_cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_view_header_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:text="Cancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>