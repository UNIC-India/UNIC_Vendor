<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/home_page_circle" />

                <ImageView
                    android:id="@+id/order_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:elevation="2dp"
                    android:src="@drawable/clipboardlist"
                    android:tint="@color/colorTertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:elevation="2dp"
                    android:text="@string/received_orders"
                    android:textColor="@color/darkest"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:elevation="2dp"
                    android:text="@string/view_orders"
                    android:textColor="@color/darkest"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/card_view"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/home_page_circle" />

                <ImageView
                    android:id="@+id/qr_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="43dp"
                    android:elevation="2dp"
                    android:src="@drawable/qrcode"
                    android:tint="@color/colorTertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:elevation="2dp"
                    android:text="@string/my_qr"
                    android:textColor="@color/darkest"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:elevation="2dp"
                    android:text="@string/special_qr"
                    android:textColor="@color/darkest"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_view">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/home_page_circle" />

                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:elevation="2dp"
                    android:src="@drawable/settings"
                    android:tint="@color/colorTertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:elevation="2dp"
                    android:text="@string/settings"
                    android:textColor="@color/darkest"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="85dp"
                    android:elevation="2dp"
                    android:text="@string/management"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/card_view3"
                app:layout_constraintTop_toBottomOf="@id/card_view2">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/home_page_circle" />

                <ImageView
                    android:id="@+id/products_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:elevation="2dp"
                    android:src="@drawable/shoppingbag"
                    android:tint="@color/colorTertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:elevation="2dp"
                    android:text="@string/my_products"
                    android:textColor="@color/darkest"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="85dp"
                    android:elevation="2dp"
                    android:text="@string/edit_products"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_view3">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/home_page_circle" />

                <ImageView
                    android:id="@+id/report_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:elevation="2dp"
                    android:src="@drawable/analytics"
                    android:tint="@color/colorTertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:elevation="2dp"
                    android:text="@string/my_report"
                    android:textColor="@color/darkest"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="85dp"
                    android:elevation="2dp"
                    android:text="@string/analysis"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view6"
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/card_view5"
                app:layout_constraintTop_toBottomOf="@id/card_view4">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/home_page_circle" />

                <ImageView
                    android:id="@+id/apps_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="43dp"
                    android:elevation="2dp"
                    android:src="@drawable/materialapps"
                    android:tint="@color/colorTertiary" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:elevation="2dp"
                    android:text="@string/my_products"
                    android:textColor="@color/darkest"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="85dp"
                    android:elevation="2dp"
                    android:text="@string/edit_products"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>