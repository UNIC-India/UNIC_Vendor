<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/qr_dialog_qr_code"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/dialog_share_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StandardButton"
        android:background="@drawable/std_button"
        app:layout_constraintTop_toBottomOf="@id/qr_dialog_qr_code"
        app:layout_constraintEnd_toStartOf="@id/qr_dialog_share_link"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Share QR"/>

    <Button
        android:id="@+id/qr_dialog_share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StandardButton"
        android:background="@drawable/std_button"
        app:layout_constraintTop_toBottomOf="@id/qr_dialog_qr_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Share link"/>

    <Button
        android:id="@+id/qr_dialog_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StandardButton"
        android:background="@drawable/std_button"
        app:layout_constraintTop_toBottomOf="@id/qr_dialog_qr_code"
        app:layout_constraintStart_toEndOf="@+id/qr_dialog_share_link"
        android:layout_marginTop="30dp"
        android:layout_marginStart="35dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Done"/>



</androidx.constraintlayout.widget.ConstraintLayout>