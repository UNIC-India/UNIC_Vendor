<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"

    android:orientation="vertical"
   >


    <LinearLayout
        android:layout_width="152dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="142dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/double_product_view"
                    android:layout_width="125.4dp"
                    android:layout_height="119.9dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/double_product_name"
                    android:layout_width="115.5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#2D3748"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/double_product_price"
                    android:layout_width="115.5dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold_normal"
                    android:gravity="center"
                    android:textColor="#2D3748"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/double_product_cart"
                    android:layout_width="93dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/green"
                    android:text="ADD TO CART"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>