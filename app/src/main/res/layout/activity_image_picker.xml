<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.shop_addition_fragments.ImagePicker">

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/image_picker_app_bar"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       app:layout_constraintTop_toTopOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <Button
            android:id="@+id/btn_add_display_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/StandardButton"
            android:background="@drawable/std_button"
            android:text=" Add Image"
             android:drawableStart="@drawable/ic_add_circle_outline_white_24dp"
             android:paddingStart="3dp"
             android:paddingEnd="3dp"/>
         <Button
             android:id="@+id/confirm_images"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/StandardButton"
            android:background="@drawable/std_button"
            android:drawableEnd="@drawable/ic_check_black_24dp"
            android:text="CONFIRM"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </com.google.android.material.appbar.AppBarLayout>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/image_picker_recycler_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/image_picker_app_bar"
       app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>