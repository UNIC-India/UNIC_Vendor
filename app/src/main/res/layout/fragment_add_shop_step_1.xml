<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.shop_addition_fragments.AddShopStep1">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <View
                android:id="@+id/v1"
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:background="@color/grey3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />
            <View
                android:id="@+id/v2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/v1"
                android:background="@drawable/round_corner"/>
            <View
                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toLeftOf="@id/tv_shop_image"
                app:layout_constraintLeft_toRightOf="@id/v2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_shop_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Photo"
                android:padding="7dp"
                android:background="@drawable/round_corner"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/v4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_image"
                android:layout_gravity="center_vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/round_border"
            android:backgroundTint="@color/lightGrey"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/shop_image"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textSize="12sp"
                    android:text="Shop Name"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:id="@+id/edt_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/darkest"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_corner"/>
                <TextView
                    android:id="@+id/tv_shop_category"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textSize="12sp"
                    android:text="Category"
                    app:layout_constraintTop_toBottomOf="@id/edt_shop_name"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:id="@+id/edt_shop_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/darkest"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_category"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_corner"/>

                <TextView
                    android:id="@+id/tv_user_phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:textSize="12sp"
                    android:text="Phone Number"
                    app:layout_constraintTop_toBottomOf="@id/edt_shop_category"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:id="@+id/edt_user_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/darkest"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_phone_no"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_corner"/>
                <Button
                    android:id="@+id/shop_add_step_2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edt_user_phone_no"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="75dp"
                    android:textSize="16sp"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:background="@color/colourQuaternary"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>