<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_item"
    android:layout_width="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_height="200dp"
    android:backgroundTint="@color/offWhite"
    android:elevation="5dp">



      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/product_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@color/colourQuaternary"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/product_checkbox"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="17dp"></ImageView>
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_marginTop="3dp"
        android:hint="MASTI DAHI"
        android:textAllCaps="true"
        android:textColor="@color/darkest"
        android:fontFamily="@font/montserrat_bold"
        android:textColorHint="@color/darkest"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintTop_toTopOf="@id/product_image"
        android:layout_marginLeft="30dp"></TextView>


    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="2dp"
        android:hint="0002"
        android:layout_marginTop="3dp"
        android:textColor="@color/grey4"
        android:textColorHint="@color/grey4"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:layout_marginLeft="30dp"></TextView>



    <TextView
        android:id="@+id/product_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="2dp"
        android:hint="Amul"
        android:layout_marginTop="3dp"
        android:textColor="@color/grey4"
        android:textColorHint="@color/grey4"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintTop_toBottomOf="@id/product_id"
        android:layout_marginLeft="30dp"></TextView>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="2dp"
        android:hint="Rs. 20"
        android:textColor="@color/colorSecondary"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColorHint="@color/colorSecondary"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintTop_toBottomOf="@id/product_company_name"
        android:layout_marginLeft="30dp"></TextView>

          </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>