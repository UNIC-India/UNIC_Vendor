<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v1"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="110dp"
        android:background="@drawable/confirm_circle1"
        android:backgroundTint="@color/grey5"></View>

    <View
        android:id="@+id/v2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="@id/v1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/v1"
        android:background="@drawable/confirm_circle1"
        android:backgroundTint="@color/grey6"></View>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/v2"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        app:layout_constraintLeft_toLeftOf="@id/v2"
        app:layout_constraintRight_toRightOf="@id/v2"
        android:src="@drawable/like"></ImageView>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colourIcon"></TextView>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="order placed succesfully"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/darkest"></TextView>

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Back to Home"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"></Button>





</androidx.constraintlayout.widget.ConstraintLayout>