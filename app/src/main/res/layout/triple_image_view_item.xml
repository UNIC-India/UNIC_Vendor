<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="203dp"
    android:background="@drawable/round_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/triple_image_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/black_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/triple_image_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/black_border"
        app:layout_constraintTop_toBottomOf="@id/triple_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/triple_image_price"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/triple_image_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"/>

    <ImageButton
        android:id="@+id/triple_image_cart"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/ic_shopping_cart_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/triple_image_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>