<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/qr_shop_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/no_image"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/no_image_triple_products" />


        <TextView
            android:id="@+id/tv_no_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/abeezee"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/no_image"
            app:layout_constraintEnd_toEndOf="@+id/no_image"
            app:layout_constraintStart_toStartOf="@+id/no_image"
            app:layout_constraintTop_toTopOf="@+id/no_image" />

        <TextView
            android:id="@+id/qr_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/abeezee"
            android:maxLines="1"
            android:text="Shop name"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qr_shop_image"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_shop_generate_qr"
            style="@style/StandardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/abeezee"
            android:background="@drawable/std_button"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Share Link"
            app:layout_constraintStart_toEndOf="@+id/qr_shop_image"
            app:layout_constraintTop_toBottomOf="@id/qr_shop_name" />

        <ImageButton
            android:id="@+id/ib_qr_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:src="@drawable/qrscannerlogo"
            app:layout_constraintBottom_toBottomOf="@id/btn_shop_generate_qr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_shop_generate_qr"
            app:layout_constraintTop_toTopOf="@id/btn_shop_generate_qr" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>